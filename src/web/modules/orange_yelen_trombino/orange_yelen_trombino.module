<?php

/**
 * @file
 * Primary module hooks for Orange Yelen Trombino module.
 */


/**
 * @return array[]
 * @Implement hook_theme()
 */
function orange_yelen_trombino_theme(){
  return [
    'orange_yelen_trombino_index' => [
      'variables' => [],
    ],
  ];
}

use Drupal\Core\Render\Element;
use Drupal\user\UserInterface;

/**
 * Implements hook_theme().
 */
function orange_yelen_trombino_theme(): array {
  return [
    'orange_yelen_trombino_point_de_service' => ['render element' => 'elements'],
  ];
}

/**
 * Prepares variables for point de service templates.
 *
 * Default template: orange-yelen-trombino-point-de-service.html.twig.
 *
 * @param array $variables
 *   An associative array containing:
 *   - elements: An associative array containing the point de service information and any
 *     fields attached to the entity.
 *   - attributes: HTML attributes for the containing element.
 */
function template_preprocess_orange_yelen_trombino_point_de_service(array &$variables): void {
  $variables['view_mode'] = $variables['elements']['#view_mode'];
  foreach (Element::children($variables['elements']) as $key) {
    $variables['content'][$key] = $variables['elements'][$key];
  }
}

/**
 * Implements hook_user_cancel().
 */
function orange_yelen_trombino_user_cancel($edit, UserInterface $account, $method): void {
  switch ($method) {
    case 'user_cancel_block_unpublish':
      // Unpublish point de services.
      $storage = \Drupal::entityTypeManager()->getStorage('orange_yelen_trombino_point_de_service');
      $orange_yelen_trombino_point_de_service_ids = $storage->getQuery()
        ->condition('uid', $account->id())
        ->condition('status', 1)
        ->accessCheck(FALSE)
        ->execute();
      foreach ($storage->loadMultiple($orange_yelen_trombino_point_de_service_ids) as $orange_yelen_trombino_point_de_service) {
        $orange_yelen_trombino_point_de_service->set('status', FALSE)->save();
      }
      break;

    case 'user_cancel_reassign':
      // Anonymize point de services.
      $storage = \Drupal::entityTypeManager()->getStorage('orange_yelen_trombino_point_de_service');
      $orange_yelen_trombino_point_de_service_ids = $storage->getQuery()
        ->condition('uid', $account->id())
        ->accessCheck(FALSE)
        ->execute();
      foreach ($storage->loadMultiple($orange_yelen_trombino_point_de_service_ids) as $orange_yelen_trombino_point_de_service) {
        $orange_yelen_trombino_point_de_service->setOwnerId(0)->save();
      }
      break;
  }
}

/**
 * Implements hook_ENTITY_TYPE_predelete() for user entities.
 */
function orange_yelen_trombino_user_predelete(UserInterface $account): void {
  // Delete point de services that belong to this account.
  $storage = \Drupal::entityTypeManager()->getStorage('orange_yelen_trombino_point_de_service');
  $orange_yelen_trombino_point_de_service_ids = $storage->getQuery()
    ->condition('uid', $account->id())
    ->accessCheck(FALSE)
    ->execute();
  $storage->delete(
    $storage->loadMultiple($orange_yelen_trombino_point_de_service_ids)
  );
}
